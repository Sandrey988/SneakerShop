@model IEnumerable<Sneaker.Models.ProductSize>
@{
    ViewBag.Title = "Список размеров моделей";
}
<html>
<head>
</head>
<body>
    <a asp-action="Create">Добавить кросcовки</a>
    <table class="table">
        <tr><td>Название кроссовка</td></tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.ProductId</td>
            <td>
                <a asp-action="Delete" asp-controller="ProductSize" asp-route-id="@item.ProductId">Удалить</a>
            </td>
        </tr>
        }
    </table>
</body>
</html>