@model Sneaker.ViewModel.SneakerImg

@{
    ViewBag.Title = "Добавление изображения";
}

    <body>
        <form asp-action="Create" asp-controller="Img" method="post">
            <div class="form-group">
                <label asp-for="UrlImage" class="control-label">Ссылка на изображение</label>
                <input type="text" asp-for="UrlImage" class="form-control" />
            </div>
            
            <div class="form-group">
                <label asp-for="Sneakers" class="control-label"></label>
                <select asp-for="SelectSneaker"
                        asp-items="@(new SelectList(Model.Sneakers, "SneakerId", "SneakerName"))"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </form>
    </body>