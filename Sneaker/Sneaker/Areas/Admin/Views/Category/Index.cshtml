@model IEnumerable<Sneaker.Models.Category>
@{
    ViewBag.Title = "Все категории";
}

<html>
<head>

</head>
<body>
    <a asp-action="Create">Добавить категорию</a>
    <table class="table">
        <tr><td>Название категории</td></tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.CategoryName</td>
            <td>
                <a asp-action="Edit" asp-controller="Category" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="Category" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
        }
    </table>
</body>
</html>