@model IEnumerable<Sneaker.Models.Material>
@{
    ViewBag.Title = "Список материалов";
}

<html>
<head>
    <title>Материалы</title>
</head>
<body>
    <a asp-action="Create">Добавить материал</a>

    <table class="table">
        <tr><td><h4>Материал</h4></td></tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaterialName</td>
                <td>
                    <a asp-action="Edit" asp-controller="Material" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Delete" asp-controller="Material" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
         }
    </table>
</body>
</html>
