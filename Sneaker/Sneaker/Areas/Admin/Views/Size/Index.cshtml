@model IEnumerable<Sneaker.Models.Size>
@{
    ViewBag.Title = "Все Размеры";
}

<html>
<head>

</head>
<body>
    <a asp-action="Create">Добавить размер</a>
    <table class="table">
        <tr><td>Размер</td></tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.Number</td>
            <td>
                <a asp-action="Delete" asp-controller="Size" asp-route-id="@item.SizeId">Удалить</a>
            </td>
        </tr>
        }
    </table>
</body>
</html>