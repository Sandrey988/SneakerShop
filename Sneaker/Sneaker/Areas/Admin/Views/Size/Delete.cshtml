@model Sneaker.Models.Size
@{
    ViewBag.Title = "Удаление размера";
}

<div>
    <dl class="dl-horizontal">
        <dt>Размер в сантиметрах</dt>
        <dd>
            @Html.DisplayFor(model => model.Number)
        </dd>
    </dl>

    <div>
        <form asp-controller="Size" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>