@model Sneaker.Models.Size
@{
    ViewBag.Title = "Добавление размера";
}
<form asp-action="Create" asp-controller="Size">
    <div class="form-group">
        <label asp-for="Number" class="control-label">Введите размер(см)</label>
        <input type="text" asp-for="Number" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>
