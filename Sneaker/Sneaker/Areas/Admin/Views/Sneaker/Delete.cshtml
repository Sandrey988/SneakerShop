@model Sneaker.Models.Sneaker
@{
    ViewBag.Title = "Удаление кроссовка";
}

<div>
    <dl class="dl-horizontal">
        <dt>Удалить эту пару?</dt>
        <dd>
            @Html.DisplayFor(model => model.SneakerName)
        </dd>
    </dl>

    <div>
        <form asp-controller="Sneaker" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>