@model IEnumerable<Sneaker.Models.Brand>
@{
    ViewBag.Title = "Все бренды";
}

<html>
<head>

</head>
<body>
    <a asp-action="Create">Добавить бренд</a>
    <table class="table">
        <tr><td>Название бренда</td></tr>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.BrandName</td>
            <td>
                <a asp-action="Details" asp-controller="Brand" asp-route-id="@item.Id">Подробнее</a> |
                <a asp-action="Edit" asp-controller="Brand" asp-route-id="@item.Id">Изменить</a> |
                <a asp-action="Delete" asp-controller="Brand" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
        }
    </table>
</body>
</html>