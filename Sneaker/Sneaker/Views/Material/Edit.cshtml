@model Sneaker.Models.Material
@{
    ViewBag.Title = "Редактирование материала";
}

<form asp-action="edit" asp-controller="Material" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="MaterialName" class="control-label">Название</label>
        <input type="text" asp-for="MaterialName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Send" class="btn btn-default" />
    </div>
</form>