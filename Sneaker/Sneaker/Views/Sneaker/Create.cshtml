@model Sneaker.ViewModel.SneakerAll
@{
    ViewBag.Title = "Добавление кроссовка";
}

    <body>
        <form asp-action="Create" asp-controller="Sneaker" method="post">

            <div class="form-group">
                <label asp-for="Name" class="control-label">Название</label>
                <input type="text" asp-for="Name" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Descriptions" class="control-label">Описание</label>
                <input type="text" asp-for="Descriptions" class="form-control" />
            </div>

            <div class="form-group">
                <label asp-for="Categories" class="control-label"></label>
                <select asp-for="SelectedCategory"
                        asp-items="@(new SelectList(Model.Categories, "Id", "CategoryName"))"></select>
            </div>

            <div class="form-group">
                <label asp-for="Materials" class="control-label"></label>
                <select asp-for="SelectedMaterial"
                        asp-items="@(new SelectList(Model.Materials, "Id", "MaterialName"))"></select>
            </div>

            <div class="form-group">
                <label asp-for="Brands" class="control-label"></label>
                <select asp-for="SelectedBrand"
                        asp-items="@(new SelectList(Model.Brands, "Id", "BrandName"))"></select>
            </div>



            <div class="form-group">
                <input type="submit" value="Send" class="btn btn-default" />
            </div>
        </form>


    </body>


