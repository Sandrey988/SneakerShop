@model Sneaker.Models.Order
@{
    ViewBag.Title = "Удаление продукта";
}

<div>
    <dl class="dl-horizontal">
        <dt>Удалить это товар из корзины?</dt>
        <dd>
            @Html.DisplayFor(model => model.Name) 
        </dd>
    </dl>
    <div>
        <form asp-controller="Card" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>