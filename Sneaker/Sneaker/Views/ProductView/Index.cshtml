
@model List<Sneaker.ViewModel.ProductView>
@addTagHelper "*, Sneaker"

@{
<html>
<head>
    
    <title>@(Model.FirstOrDefault() == null ? "Ничего не найдено" : Model.First().BrandName)
    </title>
    <link href="~/css/sneakerStyle.css" rel="stylesheet" />
</head>
<body>
    @if (Model.Count != 0)
    {

        @foreach (var product in Model)
        {
                <div class="navbar-brand-my ">
                    <div>
                        <a asp-action="Details" asp-controller="ProductView" asp-route-id="@product.Id">
                            <img src="@product.UrlImage" height="278" width="278" />
                            <div>
                                <p><b>@product.Name </b></p>
                                <p class="btn-success"><b>$@product.Price </b></p>
                            </div>
                        </a>
                    </div>
                </div>

        }
    }
    else
    {
        <div class="text-center">
            <h1>По вашему запросу ничего не найдено</h1>
        </div>
     }
</body>
</html>
}

