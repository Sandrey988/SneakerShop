@model Sneaker.ViewModel.LoginViewModel
@{  
<html>
<head>
    <link href="~/css/list.css" rel="stylesheet">
</head>
<body>
    <div class="text-center sticky-top">
        <h2>Вход </h2>
        <h6>Еще нет аккаунта? <a asp-action="Register" asp-controller="Account">Зарегистрируйтесь!</a></h6>
        
        <form method="post" asp-controller="Account" asp-action="Login"
              asp-route-returnUrl="@Model.ReturnUrl">
            <div>
                <div asp-validation-summary="ModelOnly"></div>
            </div>

            <span asp-validation-for="UserName"></span>
            <div>
                <input asp-for="UserName" placeholder="UserName" />
            </div>
            <span asp-validation-for="Password"></span>
            <div>
                <input asp-for="Password" placeholder="Password" />
            </div>
            <div>
                <input type="submit" value="Войти" />
            </div>
            <br>
            <div>
                <img src="~/icons/loading.gif" />
            </div>
        </form>
    </div>
</body>


</html>
}